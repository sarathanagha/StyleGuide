{
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/bin": true
    },
    "files.trimTrailingWhitespace": true,

    "editor.insertSpaces": true,

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/bin": true
    }
}